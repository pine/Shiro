#!/bin/bash

set -e

LIBEVENT_PATH=$OPENSHIFT_DATA_DIR/libevent/lib

export MYSQL_HOST=$OPENSHIFT_MYSQL_DB_HOST
export MYSQL_PORT=$OPENSHIFT_MYSQL_DB_PORT
export MYSQL_USERNAME=$OPENSHIFT_MYSQL_DB_USERNAME
export MYSQL_PASSWORD=$OPENSHIFT_MYSQL_DB_PASSWORD
export MYSQL_DBNAME=$OPENSHIFT_APP_NAME

LD_LIBRARY_PATH="$LIBEVENT_PATH" exec $*
